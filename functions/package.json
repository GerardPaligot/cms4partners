{
    "name": "functions",
    "scripts": {
        "lint": "tslint --project tsconfig.json",
        "build": "tsc",
        "serve": "npm run build && firebase serve --only functions,firestore",
        "shell": "npm run build && firebase functions:shell",
        "start": "npm run shell",
        "deploy": "firebase deploy --only functions",
        "logs": "firebase functions:log",
        "test": "jest --passWithNoTests"
    },
    "engines": {
        "node": "8"
    },
    "main": "lib/index.js",
    "dependencies": {
        "date-fns": "^2.8.1",
        "ejs": "2.6.1",
        "firebase-admin": "8.7.0",
        "firebase-functions": "3.3.0",
        "generate-password": "^1.4.2",
        "markdown-pdf": "8.1.1",
        "node-mailjet": "3.3.1"
    },
    "devDependencies": {
        "@types/jest": "24.0.21",
        "@types/node": "12.12.5",
        "babel-jest": "24.9.0",
        "jest": "24.9.0",
        "ts-jest": "24.1.0",
        "tslint": "5.20.1",
        "typescript": "3.6.4"
    },
    "private": true,
    "jest": {
        "roots": [
            "<rootDir>/src"
        ],
        "transform": {
            "^.+\\.(js|jsx)$": "babel-jest",
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ],
        "globals": {
            "ts-jest": {
                "module": "commonjs"
            }
        }
    }
}
