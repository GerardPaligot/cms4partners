{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitReturns": true,
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "outDir": "lib",
        "sourceMap": true,
        "strict": true,
        "target": "es2017",
        "types": ["jest", "node"]
    },
    "compileOnSave": true,
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
