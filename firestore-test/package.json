{
    "name": "cloud-firestore-emulator-typescript-quickstart",
    "version": "1.0.2",
    "description": "Cloud Firestore emulator testing, with TypeScript",
    "scripts": {
        "test": "jest --testTimeout=10000"
    },
    "devDependencies": {
        "@firebase/testing": "0.14.2",
        "babel-jest": "24.9.0",
        "filesystem": "1.0.1",
        "jest": "24.9.0",
        "source-map-support": "0.5.16",
        "ts-jest": "24.1.0",
        "ts-node": "7.0.1",
        "typescript": "3.6.4"
    },
    "jest": {
        "roots": [
            "<rootDir>/src"
        ],
        "transform": {
            "^.+\\.(js|jsx)$": "babel-jest",
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ],
        "globals": {
            "ts-jest": {
                "module": "commonjs"
            }
        }
    },
    "dependencies": {
        "@types/jest": "24.0.21"
    }
}
